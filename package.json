{
	"name": "virtual-comment-system",
	"displayName": "Virtual Comment System",
	"description": "Virtual Comment System",
	"version": "0.0.1",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"engines": {
		"vscode": "^1.73.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mywiki.addComment",
				"title": "Add Comment",
				"enablement": "!commentIsEmpty"
			},
			{
				"command": "mywiki.editComment",
				"title": "Edit"
			},
			{
				"command": "mywiki.deleteComment",
				"title": "Delete",
				"icon": {
					"dark": "resources/close_inverse.svg",
					"light": "resources/close.svg"
				}
			},
			{
				"command": "mywiki.saveComment",
				"title": "Save"
			},
			{
				"command": "mywiki.cancelsaveComment",
				"title": "Cancel"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "mywiki.addComment",
					"when": "false"
				},
				{
					"command": "mywiki.editComment",
					"when": "false"
				},
				{
					"command": "mywiki.deleteComment",
					"when": "false"
				}
			],
			"comments/commentThread/title": [
				{
					"command": "mywiki.deleteComment",
					"group": "navigation",
					"when": "commentController == virtual-comment-system && !commentThreadIsEmpty"
				}
			],

			"comments/commentThread/context": [
				{
					"command": "mywiki.addComment",
					"group": "inline",
					"when": "commentController == virtual-comment-system && commentThreadIsEmpty"
				}
			],
			"comments/comment/title": [
				{
					"command": "mywiki.editComment",
					"group": "group@1",
					"when": "commentController == virtual-comment-system"
				}
			],
			"comments/comment/context": [
				{
					"command": "mywiki.cancelsaveComment",
					"group": "inline@1",
					"when": "commentController == virtual-comment-system"
				},
				{
					"command": "mywiki.saveComment",
					"group": "inline@2",
					"when": "commentController == virtual-comment-system"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint \"src/**/*.ts\""
	},
	"devDependencies": {
		"@types/node": "^16.18.34",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"typescript": "^5.1.3"
	}
}
